<meta property="og:type" content="website">
{% if title %}
  <meta property="og:title" content="{{ title }} | {{ site.title }}">
{% endif %}
{% if page.description %}
  <meta property="og:description" content="{{ page.description | escape }}">
{% elsif description %}
  <meta property="og:description" content="{{ description | escape }}">
{% endif %}
{% if page.url %}
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
{% endif %}
{% if site.title %}
  <meta property="og:site_name" content="{{ site.title }}">
{% endif %}
{% if thumbnail %}
  <meta property="og:image" content="{{ thumbnail | cldnrysrc }}">
{% elsif site.cover %}
  <meta property="og:image" content="{{ site.cover | cldnrysrc }}">
{% endif %}
{% if site.twitter %}
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@{{ site.twitter }}">
  <meta name="twitter:creator" content="@{{ site.twitter }}">
  {% if page.url %}
    <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
  {% endif %}
  {% if title %}
    <meta name="twitter:title" content="{{ title }} | {{ site.title }}">
  {% endif %}
  {% if page.description %}
    <meta name="twitter:description" content="{{ page.description | escape }}">
  {% elsif description %}
    <meta name="twitter:description" content="{{ description | escape }}">
  {% endif %}
  {% if thumbnail %}
    <meta property="twitter:image" content="{{ thumbnail | cldnrysrc }}">
  {% elsif site.cover %}
    <meta property="twitter:image" content="{{ site.cover | cldnrysrc }}">
  {% endif %}
{% endif %}
{% if site.fb_id %}
  <meta name="fb:app_id" content="{{ site.fb_id }}">
{% endif %}
{% if site.fb_admins %}
  <meta name="fb:admins" content="{{ site.fb_admins }}">
{% endif %}
{% if tags and tags[0] == 'blog' %}
  <meta property="article:author" content="{{ site.author }}">
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "mainEntityOfPage": {
        "@type": "WebSite",
        "@id": "{{ page.url }}"
      },
      "headline": "{{ title }} | {{ site.title }}",
      "image": [
        "{{ thumbnail | cldnrysrc }}"
      ],
      "datePublished": "{{ date | date: '%Y-%m-%d' }}",
      "dateModified": "{{ date | date: '%Y-%m-%d' }}",
      "author": {
        "@type": "Person",
        "name": "{{ site.author }}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Cita",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.cita.hr/favicon/android-chrome-192x192.png"
        }
      },
      {% if page.description %}
        "description": "{{ page.description | escape }}"
      {% elsif description %}
        "description": "{{ description | escape }}"
      {% endif %}
    }
  </script>
{% elsif type == "home" %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "url": "{{ site.url }}",
      "name": "{{ site.title }}",
      "about": "{{ site.about }}",
      "author": {
        "@type": "Person",
        "name": "{{ site.author }}"
      }
    }
  </script>
{% else %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@id": "{{ site.url }}",
            "name": "Home"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@id": "{{ site.url }}{{ page.url }}",
            "name": "{{ title }} | {{ site.title }}"
          }
        }
      ]
    }
  </script>
{% endif %}
<meta property="og:locale" content="en">
<link rel="pingback" href="https://webmention.io/www.silvestar.codes/xmlrpc">
<link rel="webmention" href="https://webmention.io/www.silvestar.codes/webmention">
