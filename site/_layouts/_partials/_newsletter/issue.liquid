{% assign readIndex = 1 %}
{% for findRead in reads %}{% if findRead == thisRead %}{% assign readIndex = forloop.index %}{% endif %}{% endfor %}
{% if thisRead %}
  <section class="hero margin-top-alpha">
    <div class="wrapper">
      <div class="padding">
        <div class="margin-bottom text-center">
          {% if thisRead.date %}
            <time class="button button--small button--invisible" datetime="{{ thisRead.date | date: '%Y-%m-%d' }}"><span class="fz-step--2">{{ thisRead.date | date: '%Y-%m-%d' }}</span></time>
          {% endif %}
        </div>
        {% if title %}
          <h1 class="fz-step-6 fw-bold no-margin-top margin-bottom text-center">{{ title }}</h1>
        {% endif %}
        {% if thisRead.description %}
          <p class="fz-step-0 no-margin-top margin-bottom text-center"><b>In this issue:</b> {{ thisRead.description }}</p>
        {% endif %}
        <div class="copy margin-top-alpha">
          <ul class="list-style-none">
            {% for resource in thisRead.list %}
              {% if resource.link %}
                <li>
                  <a class="note tdn" href="{{ resource.link }}" rel="noopener" data-title="Link">
                    {% if resource.title %}
                      <p class="no-margin fz-step-1 fw-bold">{% if resource.title %}{{ resource.title }}{% else %}{{ resource.link }}{% endif %}</p>
                    {% endif %}
                    {% if resource.desc %}
                      <p>{{ resource.desc }}</p>
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </section>
{% endif %}
