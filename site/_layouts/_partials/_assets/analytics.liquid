{% unless env.development %}
  {% if site.gtag %}
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-37881833-5"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-37881833-5');
    </script>
  {% elsif site.analytics == 'self' %}
    <img src="/.netlify/functions/clue/?url={{ page.url }}">
  {% endif %}
{% endunless %}
