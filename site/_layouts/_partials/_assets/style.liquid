{% if env.production or env.staging %}
  {% if loadCritical %}
    {% if isMentor %}
      <link rel="stylesheet" href="/css/mentor.min.css" media="print" onload='this.media="all"'>
    {% elsif isRibbons %}
      <link rel="stylesheet" href="/css/ribbons.min.css" media="print" onload='this.media="all"'>
    {% elsif isSlides %}
      <link rel="stylesheet" href="/css/slides.critical.min.css" media="print" onload='this.media="all"'>
    {% elsif is360 %}
      <link rel="stylesheet" href="/css/devcards.critical.min.css" media="print" onload='this.media="all"'>
    {% else %}
      <link rel="stylesheet" href="/css/style.min.css" media="print" onload='this.media="all"'>
    {% endif %}
  {% endif %}
{% endif %}
{% if type == 'articles-item' or type == 'ribbons' %}
  <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet" media='print' onload='this.media="all"'>
{% endif %}
