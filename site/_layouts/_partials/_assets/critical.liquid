{% if env.production or env.staging %}
  {% if loadCritical %}
    <style>{{ type | getCritical }}</style>
  {% else %}
    {% if isMentor %}
      <link rel="stylesheet" href="/css/mentor.min.css">
    {% elsif isRibbons %}
      <link rel="stylesheet" href="/css/ribbons.min.css">
    {% elsif isSlides %}
      <link rel="stylesheet" href="/css/slides.critical.min.css">
    {% elsif is360 %}
      <link rel="stylesheet" href="/css/devcards.critical.min.css">
    {% else %}
      <link rel="stylesheet" href="/css/style.min.css">
    {% endif %}
  {% endif %}
{% else %}
  {% if isMentor %}
    <link rel="stylesheet" href="/css/mentor.min.css">
  {% elsif isRibbons %}
    <link rel="stylesheet" href="/css/ribbons.min.css">
  {% elsif isSlides %}
    <link rel="stylesheet" href="/css/slides.critical.min.css">
  {% elsif is360 %}
    <link rel="stylesheet" href="/css/devcards.critical.min.css">
  {% else %}
    <link rel="stylesheet" href="/css/style.min.css">
  {% endif %}
{% endif %}
