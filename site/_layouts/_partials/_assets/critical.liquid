{% if env.production or env.staging %}
  {% if loadCritical %}
    <style>{{ type | getCritical }}</style>
  {% else %}
    {% if isMentor %}
      <link rel="stylesheet" href="/css/mentor.min.css">
    {% elsif isSlides %}
      <link rel="stylesheet" href="/css/slides.critical.min.css">
    {% elsif is360 %}
      <link rel="stylesheet" href="/css/devcards.critical.min.css">
    {% else %}
      <link rel="stylesheet" href="/css/style.min.css">
    {% endif %}
    {% if type == 'articles-item' %}
      <link href="https://unpkg.com/prismjs@1.20.0/themes/prism-okaidia.css" rel="stylesheet" media='print' onload='this.media="all"'>
    {% endif %}
  {% endif %}
{% else %}
  {% if isMentor %}
    <link rel="stylesheet" href="/css/mentor.min.css">
  {% elsif isSlides %}
    <link rel="stylesheet" href="/css/slides.critical.min.css">
  {% elsif is360 %}
    <link rel="stylesheet" href="/css/devcards.critical.min.css">
  {% else %}
    <link rel="stylesheet" href="/css/style.min.css">
  {% endif %}
{% endif %}
