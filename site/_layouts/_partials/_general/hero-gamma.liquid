<section class="hero margin-top-alpha">
  <div class="wrapper text-center">
    <div class="padding">
      <div class="margin-bottom">
        {% if firstTag == 'blog' %}
          <a class="button button--small button--invisible with-slash" href="/articles/">Blog</a>
        {% endif %}
        {% if firstTag == 'advent' %}
          <a class="button button--small button--invisible with-slash" href="/side-projects/advent/">Advent</a>
        {% endif %}
        {% if firstTag == 'story' %}
          <a class="button button--small button--invisible with-slash" href="/stories/">Stories</a>
        {% endif %}
        {% if tags %}
          {% assign myTags = tags | tagify %}
          {% for tag in myTags %}
            <a class="button button--small button--invisible" href="/tags/{{ tag | replace: ' ', '%20' }}/"><span class="fz-step--2">{{ tag }}</span></a>
          {% endfor %}
        {% endif %}
        {% if date %}
          <time class="button button--small button--invisible" datetime="{{ date | date: '%Y-%m-%d' }}"><span class="fz-step--2">{{ date | date: '%Y-%m-%d' }}</span></time>
        {% endif %}
      </div>
      {% if title %}
        <h1 class="fz-step-6 no-margin-top margin-bottom">{{ title | markdownifyi }}</h1>
      {% endif %}
      {% if cta.href and cta.title %}
        <div class="margin-top">
          <a class="button" href="{{ cta.href }}">{{ cta.title }}</a>
        </div>
      {% endif %}
      {% if cta2.href and cta2.title %}
        <div class="margin-top">
          <a href="{{ cta2.href }}">{{ cta2.title }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</section>
