{% assign card4List = collections[cards4.filter] %}
{% assign i1 = 1 %}

{% if card4List %}
  <section id="{{ cards4.filter }}" class="margin-top-alpha margin-bottom-alpha">
    <div class="wrapper wrapper--alpha grid padding">
      {% for card4 in card4List %}
        {% assign now = 'now' | date: "%Y-%m-%d" %}
        {% assign card4Date = card4.data.date | date: "%Y-%m-%d" %}
        {% if card4Date > now %}
          {% continue %}
        {% endif %}
        {% if cards4.limit and i1 > cards4.limit %}
          {% break %}
        {% endif %}
        {% if cards4.exclude %}
          {% assign tags = card4.data.tags | join: ', ' %}
          {% if tags contains cards4.exclude %}
            {% continue %}
          {% endif %}
        {% endif %}
        {% unless cards4.exclude == 'title' and title == card4.data.title %}
          <div class="tilt card card--flex bg-lightish border-alpha padding">
            <a class="db fz-step--2 padding text-center margin-bottom" href="{{ card4.url }}">
              On {% if card4.date %}<time datetime="{{ card4.date | date: "%Y-%m-%d" }}">{{ card4.date | date: "%B %e, %Y" }}</time>{% endif %}{% if site.author %} {{ site.author }} wrote:{% endif %}
            </a>
            <div class="padding top-border" href="{{ card4.url }}">
              <div class="tilt__inner copy margin-top margin-bottom-alpha">{{ card4.data.content }}</div>
            </div>
            <div class="padding border-alpha top-border text-center">
              {% assign card4titleEncoded = card4.data.content | strip_html | strip | url_encode %}
              {% assign card4titleEscaped = card4titleEncoded | replace: '+', '%20' %}
              {% assign twitterLink = "https://twitter.com/intent/tweet?text=" | append: card4titleEncoded | append: "&via=" | append: site.twitter | append: "&url=" | append: site.url | append: card4.url %}
              {% assign mastodonLink = "https://sharetomastodon.github.io/?title=" | append: card4titleEscaped | append: "&url=" | append: site.url | append: card4.url %}
              {% assign redditLink = "https://www.reddit.com/submit?title=" | append: card4titleEncoded | append: "&url=" | append: site.url | append: card4.url %}
              <p class="fz-step--2 no-margin">Share the story</p>
              <div>
                <a class="button button--small button--invisible border-alpha margin-left margin-right" href="{{ twitterLink }}" target="_blank"><span class="fz-step--2">Twitter</span></a>
                <a class="button button--small button--invisible border-alpha margin-left margin-right" href="{{ mastodonLink }}" target="_blank"><span class="fz-step--2">Mastodon</span></a>
                <a class="button button--small button--invisible border-alpha margin-left margin-right" href="{{ redditLink }}" target="_blank"><span class="fz-step--2">Reddit</span></a>
              </div>
            </div>
          </div>
        {% endunless %}
        {% assign i1 = i1 | plus: 1 %}
      {% endfor %}
      {% if cards4.desc %}
        <div class="card card--flex text-center padding">
          <div class="margin-auto">
            <div class="copy">{{ cards4.desc | markdownify }}</div>
            {% if cards4.cta2 %}
              <div class="margin-top">
                <a class="button" href="{{ cards4.cta2.href }}">{{ cards4.cta2.title }}</a>
              </div>
            {% endif %}
            {% if cards4.cta3 %}
              <div class="margin-top">
                <a class="tdu" href="{{ cards4.cta3.href }}">{{ cards4.cta3.title }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
