{% if cards3.random %}
  {% assign card3List = collections[cards3.filter] | randomItems %}
{% else %}
  {% assign card3List = collections[cards3.filter] %}
{% endif %}
{% assign i3 = 1 %}

{% if card3List %}
  <section id="{{ cards3.filter }}" class="margin-top-beta margin-bottom-beta">
    <div class="wrapper wrapper--alpha grid">
      {% for card3 in card3List %}
        {% if card3.data.display != false %}
          {% if cards3.limit and i3 > cards3.limit %}
            {% break %}
          {% endif %}
          {% unless cards3.exclude == 'true' or title contains card3.data.title %}
            {% if card3.data.thumbnail %}
              <div class="card text-center">
                <a class="db margin no-margin-bottom{% if cards3.extraPadding %} padding{% endif %}" href="{{ card3.url }}">
                  {% if cards3.width %}
                    {% assign card3Width = cards3.width %}
                  {% else %}
                    {% assign card3Width = 501 %}
                  {% endif %}
                  {% if cards3.height %}
                    {% assign card3Height = cards3.height %}
                  {% else %}
                    {% assign card3Height = 304 %}
                  {% endif %}
                  {% if card3.data.thumbnail %}
                    {% if card3.data.thumbnail.src %}
                      {% cldnry card3.data.thumbnail.src card3.data.thumbnail.alt card3.data.thumbnail.width card3.data.thumbnail.height %}
                    {% endif %}
                  {% endif %}
                  {% if card3.data.title %}
                    <h3 class="fz-step-3 no-margin-top">{% if card3.data.projectTitle %}{{ card3.data.projectTitle }}{% else %}{{ card3.data.title }}{% endif %}</h3>
                  {% endif %}
                  {% if cards3.cta %}
                    <span class="button button--outline button--small">{{ cards3.cta.title }}</span>
                  {% endif %}
                </a>
              </div>
            {% endif %}
            {% assign i3 = i3 | plus: 1 %}
          {% endunless %}
        {% endif %}
      {% endfor %}
      {% if cards3.desc %}
        <div class="card card--flex text-center padding">
          <div class="margin-auto">
            <div class="copy">{{ cards3.desc | markdownify }}</div>
            {% if cards3.cta2 %}
              <div class="margin-top">
                <a class="button" href="{{ cards3.cta2.href }}">{{ cards3.cta2.title }}</a>
              </div>
            {% endif %}
            {% if cards3.cta3 %}
              <div class="margin-top">
                <a class="tdu" href="{{ cards3.cta3.href }}">{{ cards3.cta3.title }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
