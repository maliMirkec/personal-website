{%- if cta[component.banner] -%}
  <section class="banner banner--beta sticky">
    {%- if cta[component.banner].logo -%}
      {%- assign logo = cta[component.banner].logo -%}
      {% assign techWidth2x = logo.width | times: 2 %}
      {% assign techWidths = logo.width | append: ',' | append: techWidth2x | split: ',' %}
      {%- if cta[component.banner].cta -%}
        <a class="banner__logo" href="{{ cta[component.banner].cta.href }}">
          {%- cldnryfetch logo.src logo.alt techWidths true false logo.svg -%}
        </a>
      {%- else -%}
        <div class="banner__logo">
          {%- cldnryfetch logo.src logo.alt bannerWidths true false true -%}
        </div>
      {%- endif -%}
    {%- endif -%}
    {%- if cta[component.banner].stack -%}
      <h2 class="banner__title">Tech stack</h2>
      <ul class="banner__list">
        {%- for stack in cta[component.banner].stack -%}
          <li>{{ stack }}</li>
        {%- endfor -%}
      </ul>
    {%- endif -%}
    {%- if cta[component.banner].cta2 -%}
      <div class="banner__action">
        {%- include '_includes/_components/cta', cta: cta[component.banner].cta2 -%}
      </div>
    {%- endif -%}
  </section>
{%- endif -%}
