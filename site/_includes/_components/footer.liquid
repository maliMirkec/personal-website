{% if footer2024 %}
  <footer class="footer" id="footer">
    <div class="footer__inner">
      <div class="footer__content">
        {% if site.author %}
          <p><span>&copy;</span> {{ site.author }} {{ site.established }}â€“{{ 'now' | date: '%Y'}}</p>
        {% endif %}
        {% if footer2024.github %}
          <p>{{ footer2024.github.text }} <a href="{{ footer2024.github.href }}">{{ footer2024.github.name }}</a>.</p>
        {% endif %}
        <p class="js-page-loaded-in">Page loaded in 0.001s.</p>
      </div>
      {% if footer2024.logo %}
        <a class="footer__logo" href="{{ footer2024.logo.href }}">
          {% assign footerWidth2x = footer2024.logo.width.width | times: 2 %}
          {% assign footerWidths = footer2024.logo.width.width | append: ',' | append: footerWidth2x | split: ',' %}
          {%- cldnryfetch footer2024.logo.src footer2024.logo.alt footerWidths false false footer2024.logo.svg -%}
        </a>
      {% endif %}
    </div>
    {% if footer2024.social %}
      <ul class="footer__social">
        {% for social in footer2024.social %}
          <li>
            <a href="{{ social.href }}"{% if social.rel %} rel="{{ social.rel }}"{% endif %}>
              {% assign iconPath = '_components/_icons/' | append: social.title | append: '.svg' | downcase  %}
              {% include iconPath %}
              <span class="sr-only">{{ social.title }}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    {% endif %}
  </footer>
{% endif %}
