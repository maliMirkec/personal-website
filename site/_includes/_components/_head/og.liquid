<meta property="og:locale" content="en">
<meta property="og:type" content="website">
<meta name="generator" content="{{ 'generator' | generator }}">
{% if title %}
  <meta property="og:title" content="{{ longTitle }}">
{% endif %}
{% if tag and description_placeholder %}
  <meta property="og:description" content="{{ description_placeholder | replace: 'XXYY', tag }}">
{% elsif page.description %}
  <meta property="og:description" content="{{ page.description | escape }}">
{% elsif description %}
  <meta property="og:description" content="{{ description | escape }}">
{% endif %}
{% if page.url %}
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
{% endif %}
{% if site.title %}
  <meta property="og:site_name" content="{{ site.title }}">
{% endif %}
<meta property="og:image" content="{{ site.url }}/og.png?text={% if ogImageTitle %}{{ ogImageTitle | url_encode }}{% else %}{{ title | url_encode }}{% endif %}">
<meta property="og:image:secure_url" content="{{ site.url }}/og.png?text={% if ogImageTitle %}{{ ogImageTitle | url_encode }}{% else %}{{ title | url_encode }}{% endif %}">
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
{% if tags and tags[0] == 'blog' %}
  <meta property="article:author" content="{{ site.author }}">
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BlogPosting",
      "mainEntityOfPage": {
        "@type": "WebSite",
        "@id": "{{ page.url }}"
      },
      "headline": "{% if ogImageTitle %}{{ ogImageTitle }}{% else %}{{ title }}{% endif %}",
      "image": [
        "{{ site.url }}/og.png?text={% if ogImageTitle %}{{ ogImageTitle | url_encode }}{% else %}{{ title | url_encode }}{% endif %}"
      ],
      "datePublished": "{{ date | date: '%Y-%m-%d' }}",
      "dateModified": "{{ date | date: '%Y-%m-%d' }}",
      "author": {
        "@type": "Person",
        "name": "{{ site.author }}",
        "url": "{{ site.url }}"
      },
      "publisher": {
        "@type": "Organization",
        "name": "Cita",
        "logo": {
          "@type": "ImageObject",
          "url": "https://www.cita.hr/favicon/android-chrome-192x192.png"
        }
      },
      {% if page.description %}
        "description": "{{ page.description | escape }}"
      {% elsif description %}
        "description": "{{ description | escape }}"
      {% endif %}
    }
  </script>
{% elsif type == "home" %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "url": "{{ site.url }}",
      "name": "{{ site.title }}",
      "about": "{{ site.about }}",
      "author": {
        "@type": "Person",
        "name": "{{ site.author }}"
      }
    }
  </script>
{% else %}
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "item": {
            "@id": "{{ site.url }}",
            "name": "Home"
          }
        },
        {
          "@type": "ListItem",
          "position": 2,
          "item": {
            "@id": "{{ site.url }}{{ page.url }}",
            "name": "{% if ogImageTitle %}{{ ogImageTitle }}{% else %}{{ title }}{% endif %}"
          }
        }
      ]
    }
  </script>
{% endif %}
